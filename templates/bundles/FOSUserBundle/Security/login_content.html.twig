{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="grid-x grid-margin-x">
    <div class="cell small-4 medium-3">
        
    </div>
    <div class="cell auto">
        <div class="bebase orange largest">Login</div>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
                
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                
            <!-- <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label> -->
            
            <div class="grid-x grid-margin-x">
                <div class="cell small-6">
                    <a href="{{ path("fos_user_resetting_request") }}">Wachtwoord vergeten</a>
                </div>
                <div class="cell auto" align="right">
                    <button type="submit" class="button largest" id="_submit" name="_submit"><span class="fas fa-arrow-right"></span></button>
                </div>
            </div>
        </form>
    </div>
</div>